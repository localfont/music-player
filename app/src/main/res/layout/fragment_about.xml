<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsvContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:background="?android:attr/colorBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                style="@style/CheckboxStyle"
                android:id="@+id/cbShowReportDialogOnStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/show_error_report_dialog_on_start"
                android:layout_marginTop="@dimen/list_vertical_margin"
                android:layout_marginBottom="@dimen/list_vertical_margin"
                android:layout_marginEnd="@dimen/content_horizontal_margin"
                android:layout_marginStart="@dimen/content_horizontal_margin"/>

            <TextView
                android:id="@+id/tvLogInfo"
                style="@style/TextStyle.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/content_horizontal_margin"
                android:layout_marginEnd="@dimen/content_horizontal_margin"
                android:text="@string/log_info_text"/>

        <LinearLayout
            android:id="@+id/llLogActions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="end"
            android:gravity="end">

            <Button
                android:id="@+id/btnDelete"
                style="@style/ButtonBrightStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delete_file"
                android:layout_marginStart="@dimen/content_horizontal_margin"
                android:layout_marginEnd="@dimen/content_horizontal_margin"
                android:layout_marginTop="@dimen/content_vertical_margin"
                android:layout_marginBottom="@dimen/content_vertical_margin"/>

            <Button
                android:id="@+id/btnView"
                style="@style/ButtonBrightStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/view_file"
                android:layout_marginEnd="@dimen/content_horizontal_margin"
                android:layout_marginBottom="@dimen/content_vertical_margin"/>

            <Button
                android:id="@+id/btnSend"
                style="@style/ButtonBrightStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/send_file"
                android:layout_marginEnd="@dimen/content_horizontal_margin"
                android:layout_marginBottom="@dimen/content_vertical_margin"/>

        </LinearLayout>

        <View
            android:id="@+id/dividerLog"
            style="@style/Divider.Horizontal"
            android:layout_marginStart="@dimen/content_horizontal_margin"
            android:layout_marginEnd="@dimen/content_horizontal_margin"/>

            <TextView
                android:id="@+id/tvAbout"
                style="@style/TextStyle.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/content_horizontal_margin"
                android:layout_marginEnd="@dimen/content_horizontal_margin"
                android:layout_marginTop="@dimen/content_vertical_margin"
                android:layout_marginBottom="@dimen/content_vertical_margin"
                tools:text="@string/about_app_text"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</FrameLayout>