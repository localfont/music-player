<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clDrawerContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.github.anrimian.musicplayer.ui.common.toolbar.AdvancedToolbar
            style="@style/AdvancedToolbarStyle"
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.github.anrimian.musicplayer.ui.player_screen.view.views.QueueToolbar
            android:id="@+id/toolbarPlayQueue"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginStart="@dimen/toolbar_player_content_start"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.github.anrimian.musicplayer.ui.utils.fragments.navigation.JugglerView
            android:id="@+id/drawerFragmentContainer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/bottom_sheet_height"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/clPlayerPagerContainer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="?android:attr/colorBackground"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.5">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/vpPlayContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/clBottomSheetContainer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintStart_toStartOf="@id/toolbar"
            app:layout_constraintEnd_toEndOf="@id/toolbar"
            app:layout_constraintBottom_toBottomOf="parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottom_sheet_top_shadow_height"
                android:background="@drawable/bg_shadow_top"
                app:layout_anchor="@id/controlPanelView"/>

            <com.github.anrimian.musicplayer.ui.player_screen.view.views.ControlPanelView
                style="@style/ControlPanelViewStyle"
                android:id="@+id/controlPanelView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:behavior_hideable="false"
                app:behavior_peekHeight="@dimen/bottom_sheet_height"
                app:layout_behavior="@string/bottom_sheet_behavior"/>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <View
            android:id="@+id/bottomSheetLeftShadow"
            android:layout_width="@dimen/bottom_sheet_left_shadow_width"
            android:layout_height="0dp"
            android:background="@drawable/bg_shadow_start"
            app:layout_constraintTop_toTopOf="@id/clBottomSheetContainer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/clBottomSheetContainer"/>

        <View
            android:id="@+id/bottomSheetTopLeftShadow"
            android:layout_width="@dimen/bottom_sheet_left_shadow_width"
            android:layout_height="@dimen/bottom_sheet_top_left_shadow_height"
            android:background="@drawable/bg_shadow_top_left"
            app:layout_constraintBottom_toTopOf="@id/clBottomSheetContainer"
            app:layout_constraintEnd_toStartOf="@id/clBottomSheetContainer"/>

        <View
            style="@style/ToolbarShadowViewStyle"
            android:layout_width="0dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintStart_toStartOf="@id/toolbar"
            app:layout_constraintEnd_toEndOf="@id/toolbar"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:theme="@style/NavigationViewStyle"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:insetForeground="@android:color/transparent"
        app:menu="@menu/drawer_menu">

        <FrameLayout
            android:id="@+id/flDrawerHeaderStableContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>