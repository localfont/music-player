<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Transition
        android:id="@+id/transition_collapsed_expanded"
        app:constraintSetStart="@+id/collapsed"
        app:constraintSetEnd="@+id/expanded"/>

    <Transition
        android:id="@+id/transition_expanded_expanded_no_cover"
        app:constraintSetStart="@+id/expanded"
        app:constraintSetEnd="@+id/expanded_no_cover"/>

    <Transition
        android:id="@+id/transition_collapsed_expanded_no_cover"
        app:constraintSetStart="@+id/collapsed"
        app:constraintSetEnd="@+id/expanded_no_cover"/>

    <ConstraintSet android:id="@id/collapsed">

        <Constraint
            android:id="@+id/flCoverWrapper"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/content_spacing_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/ivSkipToPrevious" />

        <Constraint
            android:id="@+id/tvCurrentComposition"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/content_spacing_margin"
            android:layout_marginStart="@dimen/content_horizontal_margin"
            app:layout_constraintEnd_toStartOf="@+id/ivSkipToPrevious"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/guidelineCollapsedPanelBottom"/>

        <Constraint
            android:id="@+id/tvCurrentCompositionArtist"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/tvCurrentComposition"
            app:layout_constraintStart_toStartOf="@+id/tvCurrentComposition"/>

        <Constraint
            android:id="@id/btnActionsMenu"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="@dimen/content_spacing_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/ivSkipToPrevious"
            android:layout_width="@dimen/control_button_width"
            android:layout_height="@dimen/control_button_width"
            app:layout_constraintEnd_toStartOf="@+id/ivPlayPause"
            app:layout_constraintTop_toTopOf="@+id/ivPlayPause" />

        <Constraint
            android:id="@+id/ivPlayPause"
            android:layout_width="@dimen/control_button_width"
            android:layout_height="@dimen/control_button_width"
            app:layout_constraintEnd_toStartOf="@+id/ivSkipToNext"
            app:layout_constraintTop_toTopOf="@+id/ivSkipToNext"/>

        <Constraint
            android:id="@+id/ivSkipToNext"
            android:layout_width="@dimen/control_button_width"
            android:layout_height="@dimen/control_button_width"
            android:layout_marginEnd="@dimen/content_spacing_margin"
            android:layout_marginRight="@dimen/content_spacing_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/guidelineCollapsedPanelBottom"/>

    </ConstraintSet>

    <ConstraintSet android:id="@id/expanded"/>

    <ConstraintSet android:id="@+id/expanded_no_cover">

        <Constraint
            android:id="@+id/flCoverWrapper"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/tvPlayedTime"
            app:layout_constraintBottom_toBottomOf="@id/sbTrackState" />

        <Constraint
            android:id="@+id/tvCurrentCompositionArtist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/content_horizontal_margin"
            android:layout_marginEnd="@dimen/content_internal_margin"
            app:layout_constraintTop_toBottomOf="@+id/tvCurrentComposition"
            app:layout_constraintBottom_toTopOf="@+id/groupTitles"
            app:layout_constraintEnd_toStartOf="@+id/btnActionsMenu"
            app:layout_constraintStart_toStartOf="parent"/>

    </ConstraintSet>

</MotionScene>